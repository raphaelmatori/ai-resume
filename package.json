{
  "name": "ai-resume",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "electron-builder -m",
    "release": "electron-builder -m -p always"
  },
  "keywords": [],
  "author": "Hyper-Tailored",
  "license": "MIT",
  "description": "AI Resume Builder",
  "devDependencies": {
    "electron": "^40.1.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "python-shell": "^5.0.0"
  },
  "build": {
    "appId": "com.hyper-tailored.ai-resume",
    "productName": "AI Resume Builder",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "icon.icns",
      "identity": null,
      "gatekeeperAssess": false,
      "hardenedRuntime": false,
      "entitlements": null,
      "entitlementsInherit": null
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "**/*",
      "!node_modules/electron/**/*",
      "!node_modules/electron-builder/**/*",
      "!sources/candidate/*",
      "!sources/vacancy/*",
      "!data/processed/*",
      "!output/*",
      "!.git/**/*",
      "!.github/**/*",
      "!dist/**/*",
      "!.tmp/**/*",
      "sources/candidate/.gitkeep",
      "sources/vacancy/.gitkeep"
    ],
    "asarUnpack": [
      "execution/**/*"
    ],
    "extraResources": [
      {
        "from": "venv",
        "to": "venv",
        "filter": [
          "**/*",
          "!**/__pycache__/*",
          "!**/*.pyc"
        ]
      },
      {
        "from": "requirements.txt",
        "to": "requirements.txt"
      }
    ]
  }
}